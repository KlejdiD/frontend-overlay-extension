{
  "manifest_version": 3,
  "name": "Webpage Overlay Tool",
  "description": "Overlay live websites or screenshots for pixel-perfect layout tracing.",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "Copy.png",
      "32": "Copy.png",
      "48": "Copy.png",
      "128": "Copy.png"
    }
  },
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*", "<all_urls>"]
}
